{
	"extends": "@tsconfig/node18/tsconfig.json",
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*"
	],
	"compilerOptions": {
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"]
	}
}
